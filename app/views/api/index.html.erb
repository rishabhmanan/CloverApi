<thead>
  <tr>
    <th>Order ID</th>
    <th>Discount Amount</th>
  </tr>
</thead>
<tbody>
  <% if @total_discounts.is_a?(Integer) %>
    <tr>
      <td colspan="2">No discounts available</td>
    </tr>
  <% else %>
    <% @total_discounts.each do |order_id, discount_amount| %>
      <tr>
        <td><%= order_id %></td>
        <td><%= discount_amount %></td>
      </tr>
    <% end %>
  <% end %>
</tbody>
