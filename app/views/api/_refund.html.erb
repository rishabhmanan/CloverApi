<% if total_refunds.is_a?(Hash) && total_refunds.present? %>
  <table class="table">
    <thead>
      <tr>
        <th>Refund ID</th>
        <th>Refund Amount</th>
      </tr>
    </thead>
    <tbody>
      <% total_refunds.each do |refund_id, refund_amount| %>
        <tr>
          <td><%= refund_id %></td>
          <td><%= refund_amount %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% elsif total_refunds == 0 %>
  <p>No refunds</p>
<% else %>
  <p>Error: Unable to retrieve refund data</p>
<% end %>